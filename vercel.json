{
  "version": 2,
  "builds": [
    {
      "src": "server/src/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/src/index.js"
    },
    {
      "src": "/socket.io/(.*)",
      "dest": "/server/src/index.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/server/src/index.js"
    },
    {
      "src": "/(.*\\.(html|xml|txt|css|js|png|jpg|jpeg|gif|ico|svg))",
      "dest": "/$1"
    },
    {
      "src": "/",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}